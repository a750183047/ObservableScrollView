<?xml version="1.0" encoding="utf-8"?>
<com.yan.observablescrollview.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    tools:context="com.yan.observablescrollview.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#ee33"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#22ee33"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#cdcdcd"
                android:id="@+id/headersss"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#f0ee33"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#f0ee33"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#f0ee33"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#f0ee33"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ee43"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#f0ee33"/>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#cdcdcd"
            android:id="@+id/header"/>
    </FrameLayout>

</com.yan.observablescrollview.ObservableScrollView>
